{
  "compilerOptions": {
    "rootDir": "./",
    "types": ["node"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types/", "./src/types/"]
  },
  "include": ["src"],
  "exclude": ["dist", "test"]
}
